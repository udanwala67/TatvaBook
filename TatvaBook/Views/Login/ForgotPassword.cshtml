@model TatvaBook.Entities.ViewModels.ForgotPasswordModel



<html>
<head>
    <link href="/css/login.css" type="text/css" rel="stylesheet">
    @* <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" rel="stylesheet" />*@
</head>
<body>
    <form method="post">
        <div class="container">
            <div class=" col-lg-12 col-md-12 col-sm-12">


                <div class="text-center">
                    <h6>Forgot Password</h6>
                    <p>Please Enter Your registered Email Addess Here We will Send You Reset Password Link On that Email Address For Reset Your Password.</p>
                </div>
                <div class="mb-3">
                    <label for="exampleFormControlInput1" asp-for="Email" class="form-label">Email address</label>
                    <input type="email" asp-for="Email" class="form-control" id="exampleFormControlInput1" placeholder="Please enter Your Email Address Here...">
                    <span asp-validation-for="Email" class="text-danger"></span>
                    @if (TempData["success"] != null)
                    {
                        <span class="text-success">@TempData["success"]</span>
                    }
                </div>

                <div class="text-center">
                    <button type="submit" class="form-label btn btn-success mt-2">Reset My Password</button>
                </div>
                <div class="text-center">
                    <p class="mt-2 nav-link btn btn-link py-0">
                        <a asp-controller="Login" asp-action="Login" style="text-decoration:none; color:darkblue">Login</a>
                    </p>
                </div>

            </div>

        </div>
    </form>
</body>
</html>