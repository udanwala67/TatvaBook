@model TatvaBook.Entities.Models.RegistrationUser


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title> Registration Page</title>
    <link href="/css/login.css" type="text/css" rel="stylesheet">
  @*  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" rel="stylesheet" />*@
</head>
<body>
    <div class="container">
        <form method="post">
            <h2>Registration</h2>
            <div asp-validation-summary="All" class="text-danger"> </div>
      
                <div class="form-group">
                    <label for="name" asp-for="FirstName"><b> First Name: </b></label>
                    <input type="text" placeholder="Enter Your Name" asp-for="FirstName" data-val="true">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="LastName" asp-for="LastName"><b>Last Name: </b></label>
                    <input type="text" asp-for="LastName" placeholder="Enter Your Last Name">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Email" asp-for="Email"><b>Email Address : </b></label>
                    <input type="email" asp-for="Email" placeholder="Enter your Email Address">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="password" asp-for="Password"><b>Passowrd : </b></label>
                    <input type="password" asp-for="Password" placeholder="Enter Your Password Here">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="ConfirmPassword" asp-for="ConfirmPassword"><b>Confirm Password : </b></label>
                    <input type="password" asp-for="ConfirmPassword" placeholder="Enter Your Password Here">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>


                <div class="text-center">
                    <button type="submit">Register</button>
                </div>
                <div>
                    <p class="text-center mt-2">
                        Already Registered?
                        <a asp-controller="Login" asp-action="login" style="text-decoration:none; color:darkblue">Login Now</a>
                    </p>
                </div>
           

        </form>
    </div>
</body>
</html>