@model TatvaBook.Entities.ViewModels.ResetPasswordModel



<html>
<head>
    <link href="/css/login.css" type="text/css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" rel="stylesheet" />
</head>
<body>
    <form method="post">
        <div class="container">
            <div class=" col-lg-12 col-md-12 col-sm-12">
                <div class="text-center">
                    <h3>Reset Password</h3>
                </div>
                <div asp-validation-summary = "All" class = "text-danger"></div>
                <input asp-for = "Email" type = "hidden"/>
                <input asp-for = "Token" type = "hidden"/>
                <div class="mb-3">
                    <label for="exampleFormControlInput1" asp-for="Password" class="form-label">Password</label>
                    <input type="password" asp-for="Password" class="form-control" id="exampleFormControlInput1" placeholder="Please Enter Your Password...">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="exampleFormControlInput1" asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                    <input type="password" asp-for="ConfirmPassword" class="form-control" id="exampleFormControlInput1" placeholder="Please enter Your Confirm Password...">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="form-label btn btn-primary mt-2">Reset My Password</button>
                </div>
                <div class="text-center">
                    <p class="mt-2 nav-link btn btn-link py-0">
                        <a asp-controller="Login" asp-action="Login" style="text-decoration:none; color:darkblue">Login</a>
                    </p>
                </div>

            </div>

        </div>
    </form>
</body>
</html>